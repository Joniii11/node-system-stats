{
  "compilerOptions": {
  "target": "ES2015",
  "module": "commonjs",
  "rootDir": "./src/",
  "outDir": "./dist/",
  "strict": true,
  "moduleResolution": "node",
  "esModuleInterop": true,
  "allowSyntheticDefaultImports": true,
  "sourceMap": false,
  "baseUrl": "./",
  "typeRoots": [
    "./src/types",
    "./node_modules/@types"
  ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
  "node_modules",
  "dist"
  ]
}